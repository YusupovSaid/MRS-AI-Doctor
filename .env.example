# Environment Configuration for MRS
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
# For local PostgreSQL (with Docker Compose)
DATABASE_URL=postgresql://mrs_user:mrs_password@localhost:5432/mrs_dev

# For SQLite (development only)
# DATABASE_URL=sqlite:///instance/mrs_dev.db

# For production PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage Configuration
USE_CLOUD_STORAGE=false

# AWS S3 Configuration (if USE_CLOUD_STORAGE=true)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=mrs-medical-files

# Azure Blob Storage Configuration (alternative to S3)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER_NAME=mrs-medical-files

# Application Settings
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
LOG_LEVEL=INFO

# Model Paths (optional - override defaults)
# TEXT_MODEL_PATH=models/svc.pkl
# IMAGE_MODEL_PATH=models/image_model.pth
# AUDIO_MODEL_PATH=models/audio_model.pth
